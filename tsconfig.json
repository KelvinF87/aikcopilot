{
	"compilerOptions": {
	  "module": "CommonJS",
	  "moduleResolution": "Node",
	  "target": "ES2022",
	  "outDir": "out",
	  "lib": [
		"ES2022"
	  ],
	  "sourceMap": true,
	  "rootDir": "src",
	  "strict": true,
	  "esModuleInterop": true,
	  "skipLibCheck": true,
	  "forceConsistentCasingInFileNames": true
	},
	"include": [
	  "src/**/*"
	],
	"exclude": [
	  "node_modules",
	  ".vscode-test",
	  "out"
	]
  }